generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String @unique
  info     Info[]
}

model Info {
  id       Int     @id @default(autoincrement())
  age      Int?
  fullname String?
  userId   Int
  user     User    @relation(fields: [userId], references: [id])
}
